<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.ItemController">

    <!-- Header -->
    <Pane prefHeight="100.0" style="-fx-background-color: #f3d6c7;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1200.0">
                <children>
                    <Label style="-fx-font-size: 28px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Item Management" />
                </children>
            </VBox>
        </children>
    </Pane>

    <!-- Left Form -->
    <VBox alignment="CENTER" prefWidth="420.0" spacing="15" AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="130.0">
        <children>
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Item Code :" />
                <TextField fx:id="itemCodeField" onKeyPressed="#SearchItemOnAction" prefHeight="38.0" promptText="Enter Item Code Here" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Item Name :" />
                <TextField fx:id="itemNameField" prefHeight="38.0" promptText="Enter item name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>
        </children>
    </VBox>

    <!-- Right Form -->
    <VBox alignment="CENTER" prefWidth="420.0" spacing="15" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="130.0">
        <children>
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Price :" />
                <TextField fx:id="itemPriceField" prefHeight="38.0" promptText="Enter item price" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Qty On Hand" />
                <TextField fx:id="itemQtyField" prefHeight="38.0" promptText="Enter Quantity" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>
        </children>
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="360.0">
        <children>
            <Button onAction="#itemSaveOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Save" />
            <Button onAction="#itemUpdateOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Update" />
            <Button onAction="#itemDeleteOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Delete" />
            <Button onAction="#clearOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Clear" />
        </children>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tblItems" style="-fx-background-radius: 12; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 12;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="430.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="150.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="372.0" text="Name" />
            <TableColumn fx:id="colPrice" prefWidth="274.0" text="Price" />
            <TableColumn fx:id="colQty" prefWidth="322.0" text="Qty" />
        </columns>
    </TableView>

</AnchorPane>
