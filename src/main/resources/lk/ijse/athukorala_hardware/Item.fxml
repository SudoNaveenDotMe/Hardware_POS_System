<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.ItemController">

    <!-- Form Container -->
    <VBox alignment="CENTER" layoutX="32.0" layoutY="92.0" prefHeight="180.0" prefWidth="340.0" spacing="15">
        <children>

            <!-- Item Name Field -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Item Code :" />
                <TextField fx:id="itemCodeField" onKeyPressed="#SearchItemOnAction" prefHeight="38.0" prefWidth="481.0" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

            <!-- Price Field -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Item Name :" />
                <TextField fx:id="itemNameField" prefWidth="300" promptText="Enter item name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

        </children>
    </VBox>
   <TableView fx:id="tblItems" layoutX="14.0" layoutY="339.0" prefHeight="254.0" prefWidth="737.0" style="-fx-background-radius: 12; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 12;">
      <columns>
         <TableColumn fx:id="colId" prefWidth="95.0" text="ID" />
         <TableColumn fx:id="colName" prefWidth="215.0" text="Name" />
         <TableColumn fx:id="colPrice" prefWidth="265.0" text="Price" />
         <TableColumn fx:id="colQty" prefWidth="160.0" text="Qty" />
      </columns>
   </TableView>
   <Pane prefHeight="80.0" prefWidth="760.0" style="-fx-background-color: #f3d6c7;">
      <children>
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="760.0">
            <children>
            
                <!-- Page Title -->
                <Label alignment="CENTER" style="-fx-font-size: 28px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Item Management" />
            </children>
         </VBox>
      </children>
   </Pane>

            <!-- Buttons Row -->
      <HBox alignment="CENTER" layoutX="87.0" layoutY="275.0" spacing="30.0" style="-fx-padding: 10 0 0 0;">
          <children>
              <Button onAction="#itemSaveOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Save" />

                    <Button onAction="#itemUpdateOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Update" />

                    <Button onAction="#itemDeleteOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Delete" />

                    <Button onAction="#clearOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Clear" />
          </children>
      </HBox>
   <VBox alignment="CENTER" layoutX="395.0" layoutY="92.0" prefHeight="180.0" prefWidth="340.0" spacing="15">
      <children>
         <VBox spacing="5">
            <children>
               <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Price : " />
               <TextField fx:id="itemPriceField" prefHeight="38.0" prefWidth="481.0" promptText="Enter item price" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </children>
         </VBox>
         <VBox spacing="5">
            <children>
               <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Qty On Hand" />
               <TextField fx:id="itemQtyField" prefWidth="300" promptText="Enter Quantity" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </children>
         </VBox>
      </children>
   </VBox>

</AnchorPane>
