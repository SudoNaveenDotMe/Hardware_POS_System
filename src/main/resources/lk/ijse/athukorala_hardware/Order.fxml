<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.OrderFormController">

    <!-- Page Title -->
    <Label layoutX="40" layoutY="25" style="-fx-font-size: 28px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Place Order" />

    <!-- Form -->
    <VBox layoutX="40" layoutY="80" prefHeight="488.0" prefWidth="300.0" spacing="18">

        <!-- Customer Selection -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Customer" />
            <ComboBox prefWidth="300" promptText="Select Customer" style="-fx-background-radius: 10; -fx-padding: 8;" />
        </VBox>

        <!-- Item Selection -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Item" />
            <ComboBox prefWidth="300" promptText="Select Item" style="-fx-background-radius: 10; -fx-padding: 8;" />
        </VBox>

        <!-- Price (auto-fill) -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Price" />
            <TextField editable="false" prefWidth="300" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #f0f0f0;" />
        </VBox>

        <!-- Stock Qty (auto-fill) -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Available Stock" />
            <TextField editable="false" prefWidth="300" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #f0f0f0;" />
        </VBox>

        <!-- Quantity Input -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Order Quantity" />
            <TextField prefWidth="300" promptText="Enter qty" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
        </VBox>

        <!-- Add to Cart Button -->
        <Button prefHeight="40" prefWidth="180" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Add to Cart" />

    </VBox>

    <!-- Cart Table -->
    <TableView fx:id="tblCart" layoutX="380" layoutY="80" prefHeight="420" prefWidth="360" style="-fx-background-radius: 12; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 12;">

        <columns>
            <TableColumn prefWidth="129.0" text="Item" />
            <TableColumn prefWidth="79.0" text="Qty" />
            <TableColumn prefWidth="146.0" text="Price" />
        </columns>
    </TableView>

    <!-- Total + Place Order Section -->
    <VBox layoutX="380" layoutY="520" spacing="10" />

      <Button layoutX="380.0" layoutY="526.0" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 10;" text="Place Order" />
      <HBox layoutX="590.0" layoutY="531.0" spacing="10">
          <Label style="-fx-font-size: 20px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Net Total:" />
          <Label style="-fx-font-size: 20px; -fx-text-fill: #dc7363; -fx-font-weight: bold;" text="0.00" />
      </HBox>
   <Separator layoutX="360.0" layoutY="14.0" orientation="VERTICAL" prefHeight="575.0" prefWidth="5.0" />

</AnchorPane>
