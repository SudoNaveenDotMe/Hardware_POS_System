<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.OrderFormController">

    <!-- Page Title -->
    <Label layoutX="40" layoutY="30" style="-fx-font-size: 28px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Place Order" />

    <!-- Form -->
    <VBox layoutX="40" layoutY="100" prefHeight="768.0" prefWidth="300.0" spacing="18">

        <!-- Customer Selection -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Customer" />
            <ComboBox fx:id="cmbCustomer" prefWidth="300" promptText="Select Customer" style="-fx-background-radius: 10; -fx-padding: 8;" />
        </VBox>

        <!-- Customer Details -->
        <VBox spacing="4">
         <HBox prefHeight="40.0" prefWidth="300.0" spacing="20.0">
            <children>
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Customer ID :" />
                  <Label fx:id="lblCustomerId" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
            </children>
         </HBox>
         <HBox prefHeight="40.0" prefWidth="200.0" spacing="20.0">
            <children>
      
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Customer Name :" />
                  <Label fx:id="lblCustomerName" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
            </children>
         </HBox>
        </VBox>

        <!-- Item Selection -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Item" />
            <ComboBox fx:id="cmbItem" prefWidth="300" promptText="Select Item" style="-fx-background-radius: 10; -fx-padding: 8;" />
        </VBox>

        <!-- Item Details -->
        <VBox spacing="4">
         <children>
            <HBox prefHeight="40.0" prefWidth="300.0" spacing="20.0">
               <children>
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Item Code :" />
                  <Label fx:id="lblCustomerId1" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Item Name :" />
                  <Label fx:id="lblCustomerName1" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
               </children>
            </HBox>
         </children>
        </VBox>

        <!-- Price -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Price" />
            <TextField fx:id="txtPrice" editable="false" prefWidth="300" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #f0f0f0;" />
        </VBox>

        <!-- Stock Qty -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Available Stock" />
            <TextField fx:id="txtStock" editable="false" prefWidth="300" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #f0f0f0;" />
        </VBox>

        <!-- Quantity -->
        <VBox spacing="6">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Order Quantity" />
            <TextField fx:id="txtQty" prefWidth="300" promptText="Enter qty" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
        </VBox>

        <!-- Add to Cart -->
        <Button prefHeight="40" prefWidth="180" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Add to Cart" />
    </VBox>

    <!-- Vertical Separator -->
    <Separator layoutX="380" layoutY="20" orientation="VERTICAL" prefHeight="860.0" prefWidth="5.0" />

    <!-- Cart Table -->
    <TableView fx:id="tblCart" layoutX="420" layoutY="100" prefHeight="600.0" prefWidth="720.0" style="-fx-background-radius: 12; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 12;">

        <columns>
            <TableColumn prefWidth="300.0" text="Item" />
            <TableColumn prefWidth="150.0" text="Qty" />
            <TableColumn prefWidth="250.0" text="Price" />
        </columns>
    </TableView>

    <!-- Place Order -->
    <Button layoutX="920.0" layoutY="755.0" prefHeight="45" prefWidth="220" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 10;" text="Place Order" />

    <!-- Net Total -->
    <HBox layoutX="433.0" layoutY="763.0" spacing="10">
        <Label style="-fx-font-size: 20px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Net Total:" />
        <Label fx:id="lblNetTotal" style="-fx-font-size: 20px; -fx-text-fill: #dc7363; -fx-font-weight: bold;" text="0.00" />
    </HBox>

</AnchorPane>
