<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../../../lk/ijse/athukorala_hardware/css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.DashboardController">

    <!-- ========== MAIN CONTENT ========== -->
    <center>
        <AnchorPane fx:id="mainContent" prefWidth="760.0" style="-fx-background-color: #f7f7f7;" />
    </center>
   <left>
      <Pane prefHeight="600.0" prefWidth="240.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="240.0" spacing="20" style="-fx-background-color: #ffffff;">
               <children>
                  <ImageView fitHeight="110.0" fitWidth="160" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="10" top="25" />
                     </VBox.margin>
                  </ImageView>
                  <VBox alignment="TOP_CENTER" spacing="12">
                     <children>
                        <Button onAction="#customerOnAction" styleClass="nav-btn" text="Customer" />
                        <Button onAction="#itemOnAction" styleClass="nav-btn" text="Item" />
                        <Button onAction="#orderOnAction" styleClass="nav-btn" text="Order" />
                        <Button onAction="#driverOnAction" styleClass="nav-btn" text="Driver" />
                        <Button onAction="#supplierOnAction" styleClass="nav-btn" text="Supplier" />
                     </children>
                  </VBox>
                  <VBox VBox.vgrow="ALWAYS" />
                  <Button onAction="#logoutOnAction" styleClass="logout-btn" text="Logout">
                     <VBox.margin>
                        <Insets bottom="25" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </Pane>
   </left>

</BorderPane>
