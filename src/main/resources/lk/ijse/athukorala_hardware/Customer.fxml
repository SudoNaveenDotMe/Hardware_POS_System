<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="customerContent" prefHeight="900.0" prefWidth="1200.0" style="-fx-background-color: #faf7f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.CustomerController">

    <children>

        <!-- HEADER -->
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1200.0" style="-fx-background-color: #f3d6c7; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <children>
                <Text text="Customer Management">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Text>
            </children>
        </VBox>

        <!-- FORM AREA -->
        <Pane layoutY="100.0" prefHeight="391.0" prefWidth="1200.0">
            <children>

                <!-- LEFT COLUMN -->
                <VBox layoutX="80.0" layoutY="30.0" prefWidth="420.0" spacing="14">
                    <children>

                        <VBox spacing="6">
                            <Label style="-fx-font-size: 18px;" text="Search Customer :" />
                            <TextField fx:id="idField" onKeyPressed="#searchCustomerOnAction" prefWidth="420.0" promptText="Enter Customer ID" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                        </VBox>

                        <VBox spacing="6">
                            <Label style="-fx-font-size: 18px;" text="Name :" />
                            <TextField fx:id="nameField" onKeyReleased="#nameKeyReleased" prefWidth="420.0" promptText="Enter name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                        </VBox>

                        <VBox spacing="6">
                            <Label style="-fx-font-size: 18px;" text="Contact :" />
                            <TextField fx:id="contactField" onKeyReleased="#contactKeyReleased" prefWidth="420.0" promptText="Enter Contact" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                        </VBox>

                    </children>
                </VBox>

                <!-- RIGHT COLUMN -->
                <VBox layoutX="660.0" layoutY="30.0" prefWidth="420.0" spacing="14">
                    <children>

                        <VBox spacing="6">
                            <Label style="-fx-font-size: 18px;" text="Email :" />
                            <TextField fx:id="emailField" onKeyReleased="#emailKeyReleased" prefWidth="420.0" promptText="Enter Email" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                        </VBox>

                        <VBox spacing="6">
                            <Label style="-fx-font-size: 18px;" text="Address :" />
                            <TextField fx:id="addressField" onKeyReleased="#addressKeyReleased" prefHeight="112.0" prefWidth="420.0" promptText="Enter Address" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                        </VBox>

                    </children>
                </VBox>

                <HBox alignment="CENTER" layoutX="446.0" layoutY="302.0" prefHeight="55.0" prefWidth="634.0" spacing="25.0" style="-fx-padding: 10 0 0 0;">
                    <children>
                        <Button fx:id="btnSave" onAction="#saveCustomerOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Save" />
                        <Button onAction="#updateCustomerOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Update" />
                        <Button onAction="#deleteCustomerOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Delete" />
                        <Button onAction="#clearFields" prefHeight="45" prefWidth="140" style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Clear" />
                    </children>
                </HBox>

            </children>
        </Pane>

        <!-- TABLE AREA -->
        <Pane layoutY="550.0" prefHeight="330.0" prefWidth="1200.0">
            <children>
                <TableView fx:id="tblCustomer" layoutX="20.0" layoutY="-62.0" prefHeight="385.0" prefWidth="1160.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd;">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="120.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="colAddress" prefWidth="350.0" text="Address" />
                        <TableColumn fx:id="colEmail" prefWidth="260.0" text="Email" />
                        <TableColumn fx:id="colContact" prefWidth="228.0" text="Contact" />
                    </columns>
                </TableView>
            </children>
        </Pane>

    </children>
</AnchorPane>
