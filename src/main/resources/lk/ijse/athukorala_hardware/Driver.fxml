<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.DriverController">

    <!-- HEADER -->
    <Pane prefHeight="100.0" prefWidth="1200.0" style="-fx-background-color: #f3d6c7;">
        <children>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1200.0">
                <children>
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Driver Management" />
                </children>
            </VBox>
        </children>
    </Pane>

    <!-- LEFT FORM -->
    <VBox alignment="CENTER" layoutX="120.0" layoutY="120.0" prefHeight="220.0" prefWidth="420.0" spacing="18">
        <children>

            <VBox spacing="6">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Driver ID :" />
                <TextField fx:id="driverIdField" onKeyPressed="#SearchDriverOnAction" prefHeight="40.0" prefWidth="420.0" promptText="Enter Driver ID Here'" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

            <VBox spacing="6">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Name :" />
                <TextField fx:id="driverNameField" prefWidth="420.0" promptText="Enter driver name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

        </children>
    </VBox>

    <!-- RIGHT FORM -->
    <VBox alignment="CENTER" layoutX="705.0" layoutY="120.0" prefHeight="220.0" prefWidth="420.0" spacing="18">
        <children>

            <VBox spacing="6">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Contact :" />
                <TextField fx:id="driverContactField" prefHeight="40.0" prefWidth="420.0" promptText="Enter contact number" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

            <VBox spacing="6">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Address :" />
                <TextField fx:id="driverAddressField" prefWidth="420.0" promptText="Enter address" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

        </children>
    </VBox>

    <!-- BUTTONS -->
    <HBox alignment="CENTER" layoutX="476.0" layoutY="340.0" prefHeight="45.0" prefWidth="670.0" spacing="35.0">
        <children>
            <Button onAction="#driverSaveOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Save" />

            <Button onAction="#driverUpdateOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Update" />

            <Button onAction="#driverDeleteOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Delete" />

            <Button onAction="#clearOnAction" prefHeight="45" prefWidth="140" style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Clear" />
        </children>
    </HBox>

    <!-- TABLE -->
    <TableView fx:id="tblDrivers" layoutX="40.0" layoutY="414.0" prefHeight="467.0" prefWidth="1120.0" style="-fx-background-radius: 12; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 12;">
        <columns>
            <TableColumn fx:id="colId" prefWidth="140.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="280.0" text="Name" />
            <TableColumn fx:id="colContact" prefWidth="350.0" text="Contact" />
            <TableColumn fx:id="colAddress" prefWidth="350.0" text="Address" />
        </columns>
    </TableView>

</AnchorPane>
