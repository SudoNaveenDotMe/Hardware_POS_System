<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.athukorala_hardware.controller.DriverController">

    <!-- Form Container -->
    <VBox alignment="CENTER" layoutX="32.0" layoutY="92.0" prefHeight="180.0" prefWidth="340.0" spacing="15">
        <children>

            <!-- Item Name Field -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Driver ID :" />
                <TextField fx:id="driverIdField" onKeyPressed="#SearchDriverOnAction" prefHeight="38.0" prefWidth="481.0" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

            <!-- Price Field -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Name :" />
                <TextField fx:id="driverNameField" prefWidth="300" promptText="Enter driver name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
            </VBox>

        </children>
    </VBox>
    <TableView fx:id="tblDrivers" layoutX="14.0" layoutY="339.0" prefHeight="254.0" prefWidth="737.0" style="-fx-background-radius: 12; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 12;">
        <columns>
            <TableColumn fx:id="colId" prefWidth="95.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="215.0" text="Name" />
            <TableColumn fx:id="colPrice" prefWidth="228.0" text="Contact" />
            <TableColumn fx:id="colQty" prefWidth="197.0" text="Address" />
        </columns>
    </TableView>
    <Pane prefHeight="80.0" prefWidth="760.0" style="-fx-background-color: #f3d6c7;">
        <children>
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="760.0">
                <children>

                    <!-- Page Title -->
                    <Label alignment="CENTER" style="-fx-font-size: 28px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Driver Management" />
                </children>
            </VBox>
        </children>
    </Pane>

    <!-- Buttons Row -->
    <HBox alignment="CENTER" layoutX="87.0" layoutY="275.0" spacing="30.0" style="-fx-padding: 10 0 0 0;">
        <children>
            <Button onAction="#driverSaveOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #dc7363; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Save" />

            <Button onAction="#driverUpdateOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #e7a65a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Update" />

            <Button onAction="#driverDeleteOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Delete" />

            <Button onAction="#clearOnAction" prefHeight="40" prefWidth="120" style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" text="Clear" />
        </children>
    </HBox>
    <VBox alignment="CENTER" layoutX="395.0" layoutY="92.0" prefHeight="180.0" prefWidth="340.0" spacing="15">
        <children>
            <VBox spacing="5">
                <children>
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Contact : " />
                    <TextField fx:id="driverContactField" prefHeight="38.0" prefWidth="481.0" promptText="Enter contact number" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                </children>
            </VBox>
            <VBox spacing="5">
                <children>
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Address" />
                    <TextField fx:id="driverAddressField" prefWidth="300" promptText="Enter address" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: white;" />
                </children>
            </VBox>
        </children>
    </VBox>

</AnchorPane>
